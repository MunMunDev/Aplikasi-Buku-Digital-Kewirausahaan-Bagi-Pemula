<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.user.ReadPdfActivity">

    <View
        android:id="@+id/bgHeader"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/titlePdf"
        android:background="@color/primaryColor"/>

    <ImageView
        android:id="@+id/ivDrawerView"
        android:layout_width="35dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:elevation="10dp"/>

    <TextView
        android:id="@+id/titlePdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivDrawerView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="20dp"
        android:text="Reader PDF"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>



</androidx.constraintlayout.widget.ConstraintLayout>